@model Category

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="post">
                <div class="text-danger" asp-validation-summary="All"></div>
                <div class="form-group">
                    <label for="formGroupExampleInput">Name</label>
                    <input class="form-control" id="formGroupExampleInput" asp-for="@Model.Name" placeholder="Enter category Name">
                    <span asp-validation-for="@Model.Name" class="text-danger" style="font-size: 0.875rem; font-weight: bold; padding-top: 5px;"></span>
                </div>

                <a asp-area="Admin" asp-controller="Category" asp-action="Index" class="btn btn-primary">Cancel</a>
                <button type="submit" class="btn btn-primary btn-block">Submit</button>
            </form>
        </div>
    </div>
</div>
