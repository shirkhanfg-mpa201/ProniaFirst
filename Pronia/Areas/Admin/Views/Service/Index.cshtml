@model List<Service>

<div class="container">
    <div class="row">
        <div class="row">
            <a class="btn btn-success" asp-action="Create">Create</a>
        </div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Name</th>
                    <th scope="col">Description</th>
                    <th scope="col">Imageurl</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var shippingItem in Model)
                {
                    <tr>
                        <th scope="row">@shippingItem.Id</th>
                        <td>@shippingItem.Title</td>
                        <td>@shippingItem.Description</td>
                        <td><img src="~/assets/images/website-images/@shippingItem.ImageUrl" width="30" height="30" /></td>
                        <td>
                            <a asp-action="Update" asp-route-id="@shippingItem.Id" class="btn btn-warning">Update</a>
                            <a asp-action="Delete" asp-route-id="@shippingItem.Id" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }


            </tbody>
        </table>
    </div>
</div>
